@model LoginVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Arowwai Admin</title>
    <link rel="stylesheet" href="~/admin/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/admin/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/admin/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/logo/mini-logo.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/logo/Orange.png" alt="logo">
                            </div>
                            <h4>Welcome to our EMail App</h4>
                            <h6 class="font-weight-light">Continue by logging in.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label for="EmailOrUsername">Email or Username:</label>
                                    <input type="text" class="form-control form-control-lg" id="EmailOrUsername" asp-for="EmailOrUsername" placeholder="Email or Username:" required>
                                </div>
                                <div class="form-group">
                                    <label for="Password">Password:</label>
                                    <input type="password" class="form-control form-control-lg" id="Password" asp-for="Password" placeholder="Password" required>
                                </div>
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        Invalid login attempt.
                                    </div>
                                }

                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Login</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Don't have an account? <a asp-controller="account" asp-action="register" class="text-primary">Create New Account</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/admin/js/off-canvas.js"></script>
    <script src="~/admin/js/hoverable-collapse.js"></script>
    <script src="~/admin/js/template.js"></script>
    <script src="~/admin/js/settings.js"></script>
    <script src="~/admin/js/todolist.js"></script>
</body>
</html>
