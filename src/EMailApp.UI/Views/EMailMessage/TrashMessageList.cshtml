@model List<Message>

<div class="col-lg grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Trash</h4>

            <div class="col-md-10">
                <a asp-action="SendMessage" class="btn btn-primary">SendMessage</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Sender Name</th>
                            <th>Receiver Name</th>
                            <th>Subject</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> <a>Sender:</a> @item.SenderName</td>
                                <td> <a>Receiver:</a> @item.ReceiverName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date</td>
                                <td>
                                    <a asp-action="InboxMessageDetails" asp-route-id="@item.MessageId" class="btn btn-info">Info</a>
                                    <a asp-action="TrashOutMessages" asp-route-id="@item.MessageId" class="btn btn-dark btn-rounded btn-fw">Restore</a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>