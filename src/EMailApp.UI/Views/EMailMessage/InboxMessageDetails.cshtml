@model Message


<style>

    .form-group label {
        font-family: "Roboto Condensed", sans-serif;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        font-size: 1.1rem;
    }

    .btn{
        font-family: "Roboto Condensed", sans-serif;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        font-size: 1.1rem;
    }

    .form-control{
        font-family: inherit;
    }

    .name{
        background-color: #e9ecef00!important;
        border:none;
        width:160px;
        font-size: 1.1rem;
        font-family: inherit;
        text-align: center;
        font-weight: 500;
    }

    .email{
        font-style:italic;
        font-family: inherit;
        border: none;
        background-color: #e9ecef00 !important;
    }

</style>

<div class="container-fluid page-body-wrapper">


<div class="col-12 grid-margin stretch-card">
    <div class="card mt-3">
        <div class="card-body">
            <h4 class="card-title" style="color: #504b8e;">
                Message
            </h4>

            <form  class="forms-sample">
                <div class="form-group">
                    <label class="title" for="exampleInputName1">Mailing Address of the Sender</label>
                    <div style="display:flex;">
                        <input type="email" disabled="disabled" class="form-control name" id="exampleInputName1" asp-for="SenderName">
                        <input type="text" disabled="disabled" class="form-control email" id="exampleInputName1" asp-for="SenderMail" value="@Model.SenderMail">
                    </div>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Subject</label>
                    <input type="text" disabled="disabled" class="form-control" id="exampleInputEmail3" asp-for="Subject">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Textarea</label>
                    <textarea disabled="disabled" class="form-control" id="exampleTextarea1" asp-for="Content" rows="5"></textarea>
                </div>

                <a asp-action="Inbox" class="btn btn-danger">Back</a>
            </form>

        </div>
    </div>
</div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-3-typeahead/4.0.2/bootstrap3-typeahead.min.js"></script>

<script>
    $(document).ready(function () {
        var senderMail = $(".email").val();
        $(".email").val("< " + senderMail + " >");
    });

    $(document).ready(function () {
        function adjustTextareaHeight() {
            var contentTextarea = $("#exampleTextarea1");
            contentTextarea.css('height', 'auto'); // Önce textarea'nın boyutunu sıfırla
            var scrollHeight = contentTextarea[0].scrollHeight; // İçeriğin tamamını göstermek için gerekli olan yükseklik
            contentTextarea.css('height', scrollHeight + 'px'); // Yeni yüksekliği ayarla
        }

        // Sayfa yüklendiğinde ve içerik değiştiğinde textarea'nın boyutunu ayarla
        adjustTextareaHeight();
        $("#exampleTextarea1").on('input', function () {
            adjustTextareaHeight();
        });
    });




</script>



