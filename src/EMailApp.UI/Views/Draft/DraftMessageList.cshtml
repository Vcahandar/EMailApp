@model List<Draft>



<div class="col-lg grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" >Draft</h4>


            @if (Model.Count <= 0 || !Model.Any(m => m.Status))
            {
                <div class="alert alert-info mt-5" role="alert">
                    No sent messages! Send one now!
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Subject</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Where(m => m.Status == true))
                            {
                                <tr>
                                    <td style="font-style:italic;color:red">Draft</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Date</td>
                                    <td>
                                        <a asp-action="SendboxMessageDetails" asp-route-id="@item.DraftId" class="btn btn-info">Info</a>
                                        <a asp-action="DraftOut" asp-route-id="@item.DraftId" class="btn btn-outline-danger btn-fw">Delete</a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>

            }

        </div>
    </div>
</div>


